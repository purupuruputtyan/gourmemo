<table class="table">
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to admin_user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100,100), class: "mt-o rounded-circle"; %>
          <% end %>
        </td>
        <td>
          <div>【名前】</div>
          <div><%= link_to user.name, admin_user_path(user.id) %></div>
        </td>
        <td>
          <div>【自己紹介】</div>
          <% if user.name != "guestuser" %>
            <% if user.introduction.present? %>
              <div><%= user.introduction %></div>
            <% else %>
              <div>自己紹介文がありません。</div>
            <% end %>
          <% else %>
            <div>ゲストユーザーです。</div>
          <% end %>
        </td>
        <td class="text-center">
          <% if user.released? %>
            <%= link_to user.status_i18n, edit_admin_user_path(user.id), class: "btn btn-success" %>
          <% elsif user.nonreleased? %>
            <%= link_to user.status_i18n, edit_admin_user_path(user.id), class: "btn btn-secondary" %>
          <% else %>
            <%= link_to user.status_i18n, edit_admin_user_path(user.id), class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= paginate users %>