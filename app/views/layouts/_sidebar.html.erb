  <div class="card-header text-center">メニュー</div>
  <div class="card-body">
    <ul class="card-text list-unstyled">
      <% if user_signed_in? %>
        <li><%= link_to 'マイページ', my_page_path %></li>
        <li><%= link_to '新規投稿', new_post_path %></li>
        <li><%= link_to '投稿一覧', posts_path %></li>
