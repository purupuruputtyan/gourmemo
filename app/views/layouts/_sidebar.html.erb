<div class="sidebar card text-dark bg-light mb-5 shadow-lg sticky-top">
  <div class="card-header text-center">メニュー</div>
  <div class="card-body">
    <ul class="card-text list-unstyled">
      <% if user_signed_in? %>
        <li>
          <%= link_to my_page_path do %>
            <i class="fas fa-user"></i>マイページ
          <% end %>
        </li>
        <li>
          <%= link_to new_post_path do %>
            <i class="fas fa-edit"></i>新規投稿
          <% end %>
        </li>
        <li>
          <%= link_to posts_path do %>
            <i class="fas fa-utensils"></i>投稿一覧
          <% end %>
        </li>
        <li>
          <%= link_to  users_path do %>
            <i class="fas fa-users"></i>ユーザー一覧
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt"></i>ログアウト
          <% end %>
        </li>
        <li>
          <%= link_to confirm_deleted_path do %>
            <i class="fas fa-exclamation-triangle"></i>退会する
          <% end %>
        </li>
      <% elsif admin_signed_in? %>
        <li>
          <%= link_to admin_root_path do %>
            <i class="fas fa-utensils"></i>投稿一覧
          <% end %>
        </li>
        <li>
          <%= link_to admin_users_path do %>
            <i class="fas fa-users"></i>ユーザー一覧
          <% end %>
        </li>
        <li>
          <%= link_to destroy_admin_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt"></i>ログアウト
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
