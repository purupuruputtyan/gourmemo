      <% end %>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="headline col-lg-6 col-md-7 col-sm-12 text-center">投稿一覧</h2>
      <%= render 'index', posts: @posts %>
    </div>
  </div>
</div>