<div class="card-list-container py-5">
  <% posts.each do |post| %>
  <div class="card w-70 mx-auto mt-4 shadow-lg">
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image(700,700), class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image(50,50), class:"mt-o rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(post.id), class:"text-dark") do %>
              <strong>お店の名前<span> <%= post.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">メニュー名：<%= post.menu %></p>

          <span><i class="fas fa-user"></i> By <%= post.user.name %> ｜ </span>
          <span>コメント</span>
          <%= render "static_rate", post: post %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>