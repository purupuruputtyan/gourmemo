<div class="card-list-container" style="w-70">  <!--style="width: 40rem;"-->
  <% posts.each do |post| %>
  <div class="card-header">
    <span>
      <%= link_to user_path(post.user.id) do %>
        <%= image_tag post.user.get_profile_image(50,50), class:"mt-o rounded-circle"; %>
      <% end %>
    </span>
    <span><%= link_to post.user.name, user_path(post.user.id), class:"text-dark" %></span>
  </div>

  <div class="card-body">
    <!--<div class="card w-70 mx-auto mt-5">-->
    <div class="row">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image(700,700), class:"card-img-top"; %>
      <% end %>
    </div>
  </div>

  <div class="card-footer">
    <div class="row">
      <div class="favorite-btn<%= post.id %> col-2">
        <%= render "public/favorites/btn", post: post %>
      </div>
      <div id="comments-count col-4">
        <%= render 'public/comments/count', post: post %>
      </div>
    </div>
    <div class="card-title">
      お店の名前：<%= link_to post.shop_name, post_path(post.id), class:"text-dark" %>
    </div>
    <div class="card-text">
      <div>メニュー名：<%= link_to post.menu, post_path(post.id), class:"text-dark" %></div>
    </div>
    <div class="row mt-2">
      <div class="col-4">また食べたい度：</div>
      <div class="col-4"><%= render "public/posts/static_rate", post: post %></div>
    </div>
  </div>
  <% end %>
</div>

<!------------------------------別のレイアウト候補--------------------------------->

<div class="card-list-container py-5">
  <% posts.each do |post| %>
    <div class="card w-70 mx-auto mt-5">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image(700,700), class:"card-img-top"; %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= link_to user_path(post.user.id) do %>
              <%= image_tag post.user.get_profile_image(50,50), class:"mt-o rounded-circle"; %>
            <% end %>
          </div>
          <div class="col-10">
            <p class="card-title">
              お店の名前：<%= link_to post.shop_name, post_path(post.id), class:"text-dark" %>
            </p>
            <p class="card-text">
              メニュー名：<%= link_to post.menu, post_path(post.id), class:"text-dark" %>
            </p>
            <span><i class="fas fa-user"></i> By <%= link_to post.user.name, user_path(post.user.id), class:"text-dark" %> ｜ </span>
            <span id="comments-count">
              <%= render 'public/comments/count', post: post %>
            </span>
            <div class="favorite-btn<%= post.id %>">
              <%= render "public/favorites/btn", post: post %>
            </div>
            また食べたい度：<%= render "public/posts/static_rate", post: post %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= paginate posts %>