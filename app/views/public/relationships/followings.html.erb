<div class="container">
  <div class="row">
    <div class="col-lg-2 col-md-3 col-sm-4">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class='col-lg-10 col-md-9 col-sm-6'>
      <div class="card shadow-lg px-3 py-3">
      <h2 class="headline col-lg-4 col-md-7 col-sm-12 text-center">フォロー一覧</h2>
      <% if @users.present? %>
        <%= render 'public/users/index', users: @users %>
      <% else %>
        <p>まだフォローしていません。</p>
      <% end %>
      </div>
      <%= link_to '戻る', :back, class: "btn btn-outline-dark mt-3" %>
    </div>
  </div>
</div>