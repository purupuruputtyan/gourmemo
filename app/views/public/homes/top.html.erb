<% if user_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-lg-2 col-md-3 col-sm-4">
        <%= render 'layouts/sidebar' %>
      </div>
      <div class='col-lg-6 col-md-8 col-sm-12 mx-auto'>
        <h2 class="headline text-center col-lg-6 col-md-7 col-sm-12">トピック</h2>
        <%= render 'public/posts/index', posts: @posts %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <div class="text-center">
          <h1>
            <strong>グルメモ</strong>
            &nbsp;へようこそ！
          </h1>
          <p>グルメのレビューをSNSで発信&nbsp;<i class="fas fa-broadcast-tower"></i></p>
          <p>グルメライフをより充実させるのにお役立てください！</p>
        </div>
        <div class-"btn-wrapper col-10 mx-auto">
          <div class="row">
          　<%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
          </div>
          <div class="row">
            <%= link_to 'ログイン', new_user_session_path, class: "btn btn-info btn-sm btn-block mb-3" %>
          </div>
          <div class="row">
            <%= link_to '新規登録', new_user_registration_path, class: "btn btn-success btn-sm btn-block" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

