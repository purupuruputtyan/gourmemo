<table class="table">
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100,100), class:"mt-o rounded-circle"; %>
          <% end %>
        </td>
        <td>
          <div>名前：<%= link_to user.name, user_path(user.id) %></div>
          <div>自己紹介：<%= user.introduction %></div>
        </td>
        <td>
          <div>フォロー数:<%= user.followings.count %></div>
          <div>フォロワー数:<%= user.followers.count %></div>
        </td>
        <% if user != current_user %>
          <td><%= render 'public/relationships/btn', user: user %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= paginate users %>