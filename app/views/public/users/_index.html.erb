<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100,100), class:"mt-o rounded-circle"; %>
          <% end %>
        </td>
        <td><%= link_to user.name, user_path(user.id) %></td>
        <td><%= user.introduction %></td>
        <td>フォロー中/フォローする</td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate users %>