<table class="table bg-white">
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100,100), class:"mt-o rounded-circle"; %>
          <% end %>
        </td>
        <td>
          <div>名前：<%= link_to user.name, user_path(user.id) %></div>
          <% if user.introduction.present? %>
            <div>自己紹介：<%= user.introduction %></div>
          <% else %>
            <div>自己紹介：自己紹介文がありません。</div>
          <% end %>
        </td>
        <td>
          <div>フォロー数:<%= user.followings.count %></div>
          <div>フォロワー数:<%= user.followers.count %></div>
        </td>
        <td>
          <% if user != current_user %>
            <%= render 'public/relationships/btn', user: user %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= paginate users %>